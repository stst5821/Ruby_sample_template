<div id="contents">

  <section>

    <h2>投稿一覧</h2>

    <% @posts.each do |post| %>
    <div class="list">

      <%# ↓この画像を投稿したユーザーのサムネイルにする %>
      <%= image_tag 'sample1.jpg' %>

      <%# ↓ユーザー名を表示させる %>

      <p><%= post.created_at%></p>
      <%# ↓投稿内容 %>
      <p><%= post.content %></p>

      <p><%= link_to("編集","/posts/#{post.id}/edit") %></p>
      <p><%= link_to("削除","/posts/#{post.id}/destroy", {method:"post"}) %></p>
    </div>
    <% end %>

  </section>

</div>